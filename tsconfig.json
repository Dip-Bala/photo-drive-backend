{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "module": "nodenext",
    "target": "esnext",
    // For nodejs:
    "lib": ["esnext"],
    "types": ["node"],
    // and npm install -D @types/node

    // Other Outputs
    "sourceMap": true,   //Generates .map files to debug TypeScript in browsers or Node.

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true, //Forces you to handle possible undefined when accessing arrays or objects
    "exactOptionalPropertyTypes": true, //Makes optional properties more precise.

    // Style Options
    // "noImplicitReturns": true,
    // "noImplicitOverride": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    // "noFallthroughCasesInSwitch": true,
    // "noPropertyAccessFromIndexSignature": true,

    // Recommended Options
    "strict": true,
    // "verbatimModuleSyntax": true, //forces you to be explicit with import vs require
    "noUncheckedSideEffectImports": true,
    "skipLibCheck": true, //Skips type-checking for node_modules
  }
}
